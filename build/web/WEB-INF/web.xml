<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentPulsaServlet</servlet-name>
        <servlet-class>Servlet.PaymentPulsaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentKuotaServlet</servlet-name>
        <servlet-class>Servlet.PaymentKuotaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>Servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataUserServlet</servlet-name>
        <servlet-class>Servlet.DataUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransaksiController</servlet-name>
        <servlet-class>controller.TransaksiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TambahUserServlet</servlet-name>
        <servlet-class>Servlet.TambahUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentPulsaServlet</servlet-name>
        <url-pattern>/PaymentPulsaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentKuotaServlet</servlet-name>
        <url-pattern>/PaymentKuotaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataUserServlet</servlet-name>
        <url-pattern>/DataUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransaksiController</servlet-name>
        <url-pattern>/TransaksiController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TambahUserServlet</servlet-name>
        <url-pattern>/TambahUserServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
